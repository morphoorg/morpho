{
  "stan": {

    "name": "tritium_analysis",

    "model":     {
      "file": "./tritium_model/models/tritium_analysis.stan",
      "function_file": "./tritium_model/models/tritium_functions.stan",
      "cache": "./tritium_model/cache"
    },

    "data": {
      "type": "data",
      "files": [
        {
          "name": "./tritium_model/data/tritium.header.data",
          "format":"R"
        },
        {
          "name": "./tritium_model/data/tritium_monte_carlo.data",
          "format":"R"
        },
        {
          "name": "./tritium_model/results/tritium_additionalData.txt",
          "format":"R"
        },
        {
          "name" : "./tritium_model/results/tritium_generator_reduced.root",
          "format" : "root",
          "tree" : "spectrum",
          "branches" : [
            {"name" : "freq_data", "stan_alias" : "freq_data"},
            {"name" : "n_events", "stan_alias" : "n_events", "data_format" : "integer"},
          ]
        },
        {
          "name" : "./tritium_model/results/tritium_generator_reduced.root",
          "format" : "root",
          "tree" : "time",
          "branches" : [
            {"name" : "time_data", "stan_alias" : "time_data"},
            {"name" : "n_time_data", "stan_alias" : "n_time_data", "data_format" : "integer"},
          ]
        }
      ],

      "parameters": [
        {
          "neutrino_mass" : 0.0
        }
      ]
    },

    "run": {
      "algorithim": "NUTS",
      "iter": 6000,
      "warmup": 5000,
      "chain": 1,
      "init": [
        {"signal_fraction": 0.9999,
          "lightest_neutrino_mass": 1.0,
          "scatt_width" : 7.3e+04,
          "uB" : 0.,
          "uQ0" : 0.,
          "uQ" : 0.,
          "uF" : 0.0,
          "us12" : 0.,
          "us13" : 0.,
          "udm21" : 0.,
          "udm32" : 0.,
          "neutrino_mass" : 0.,
          "mu_tot" : 1.0,
          "eDop":0.05,
          "n0_timeData":20000}
        ]
      },

      "sample": "./tritium_model/results/tritium_analysis.out",

      "output":
      {
        "name" : "./tritium_model/results/tritium_analysis",
        "format" : "root",
        "tree" : "stanAnalysis",
        "branches" : [
          {"variable" : "neutrino_mass", "root_alias" : "neutrino_mass"},
          {"variable" : "MainField", "root_alias" : "MainField"},
          {"variable" : "Q", "root_alias" : "Q"},
          {"variable" : "total_rate", "root_alias" : "total_rate"},
          {"variable" : "activity", "root_alias" : "activity"},
          {"variable" : "mu_tot", "root_alias" : "mu_tot"},
          {"variable" : "kDoppler", "root_alias" : "kDoppler"},
          {"variable" : "s12", "root_alias" : "s12"},
          {"variable" : "s13", "root_alias" : "s13"},
          {"variable" : "dm21", "root_alias" : "dm21"},
          {"variable" : "dm31", "root_alias" : "dm31"},
          {"variable" : "scatt_width", "root_alias" : "scatt_width"},
          {"variable" : "n0_timeData", "root_alias" : "n0_timeData"},
          {"variable" : "lp__", "root_alias" : "LogLikelihood"}
        ]
      }
    }
  }
