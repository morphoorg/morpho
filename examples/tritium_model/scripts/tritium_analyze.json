{
  "stan": {

    "name": "tritium_analysis",

    "model":     {
      "file": "./tritium_model/models/tritium_analysis.stan",
      "function_file": [
        {"name" : "constants", "file" : "../functions/constants.functions"},
        {"name" : "func_routines", "file" : "../functions/func_routines.functions"},
        {"name" : "Q_Functions", "file" : "../functions/Q_functions.functions"},
        {"name" : "tritium_functions", "file" : "../functions/tritium_functions.functions"},
        {"name" : "neutrino_mass_functions", "file" : "../functions/neutrino_mass_functions.functions"}
      ],
      "cache": "./tritium_model/cache"
    },

    "data": {
      "type": "data",
      "parameters": [
        {
          "nChains" : 4,
          "MassHierarchy" : 1
        }
      ],
      
      "files": [
        {
          "name": "./tritium_model/data/tritium.header.data",
          "format":"R"
        },
        {
          "name": "./tritium_model/data/tritium_endpoint.data",
          "format":"R"
        },
        {
          "name": "./tritium_model/data/tritium_gas.data",
          "format":"R"
        },
        {
          "name": "./tritium_model/results/tritium_additionalData.txt",
          "format":"R"
        },
        {
          "name" : "./tritium_model/results/tritium_generator_reduced_fake.root",
          "format" : "root",
          "tree" : "spectrum",
          "branches" : [
            {"name" : "freq_data", "stan_alias" : "freq_data"},
            {"name" : "n_spectrum_data", "stan_alias" : "n_spectrum_data", "data_format" : "integer"},
          ]
        },
        {
          "name" : "./tritium_model/results/tritium_generator_reduced_fake.root",
          "format" : "root",
          "tree" : "time",
          "branches" : [
            {"name" : "time_data", "stan_alias" : "time_data"},
            {"name" : "n_time_data", "stan_alias" : "n_time_data", "data_format" : "integer"},
          ]
        }
      ]
    },

    "run": {
      "algorithm": "NUTS",
      "iter": 6000,
      "warmup": 5500,
      "chain": 4,
      "init":
        { "lightest_neutrino_mass": 10.0,
          "scatt_width" : 1.0e+06,
          "uB" : 0.0,
          "uBG" : 0.,
          "uQ" : [0.,0.,0.],
          "uQ2" : 0.,
          "uF" : 0.0,
          "uS" : 0.0,
          "Tparam1" : 0.0,
          "lambda_param" : 0.,
          "kappa_param" : 0.,
          "epsilon_param" : 0.,
          "eta_param" : 0.,
          "us12" : 0.0,
          "us13" : 0.,
          "udm21" : 0.,
          "udm32" : 0.,
          "mu_tot" : 1.0,
          "eDop":0.05,
          "n0_timeData":900}
      },

      "sample": "./tritium_model/results/tritium_analysis.out",

      "output":
      {
        "name" : "./tritium_model/results/tritium_analysis",
        "format" : "root",
        "tree" : "stanAnalysis",
        "branches" : [

          {"variable" : "scatt_width", "root_alias" : "scatt_width"},
          {"variable" : "n0_timeData", "root_alias" : "n0_timeData"},
          {"variable" : "widthBin", "root_alias" : "widthBin"},
          {"variable" : "neutrino_mass", "root_alias" : "neutrino_mass"},
          {"variable" : "lightest_neutrino_mass", "root_alias" : "lightest_neutrino_mass"},
          {"variable" : "m_nu", "root_alias" : "m_nu", "ndim" : 3},
          {"variable" : "s12", "root_alias" : "s12"},
          {"variable" : "s13", "root_alias" : "s13"},
          {"variable" : "dm21", "root_alias" : "dm21"},
          {"variable" : "dm31", "root_alias" : "dm31"},
          {"variable" : "MainField", "root_alias" : "MainField"},
          {"variable" : "uB", "root_alias" : "uB"},
          {"variable" : "composition", "root_alias" : "composition", "ndim":3},
          {"variable" : "eta", "root_alias" : "eta"},
          {"variable" : "temperature", "root_alias" : "temperature"},
          {"variable" : "Q_mol", "root_alias" : "Q_mol"},
          {"variable" : "Q_T_atom", "root_alias" : "Q_T_atom"},
          {"variable" : "signal_fraction", "root_alias" : "signal_fraction"},
          {"variable" : "mu_tot", "root_alias" : "mu_tot"},
          {"variable" : "n_spectrum_recon", "root_alias" : "n_spectrum_recon","ndim":200},
          {"variable" : "frequency", "root_alias" : "frequency","ndim":200},
          {"variable" : "KE", "root_alias" : "KE","ndim":200},
          {"variable" : "norm_density", "root_alias" : "norm_density"},
          {"variable" : "activity", "root_alias" : "activity"},
          {"variable" : "background_rate", "root_alias" : "background_rate"},
          {"variable" : "lp__", "root_alias" : "LogLikelihood"}
        ]
      }
    }
  }